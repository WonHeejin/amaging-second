      <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"></property>
      <property name="jdbcUrl" value="jdbc:oracle:thin:@106.243.194.229:9999:xe"></property>
      <property name="username" value="HJ11"></property>
